@using Microsoft.AspNetCore.Identity
@using NUREMarks.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject MarksContext db

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Профиль">Здравствуйте, @db.Users.ToList().Find(u => u.UserName.Equals(UserManager.GetUserName(User))).Name</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Войти в систему</a></li>
    </ul>
}
