@model NUREMarks.Models.MarksViewModels.EditViewModel


@{
    ViewData["Title"] = "Изменить оценку";
}

<h2 class="page-title">@ViewData["Title"]</h2>
<div class="row text-center login-form">
    <div>
        <section>
            <form asp-controller="Marks" asp-action="Edit" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Введите информацию об оценке</h4>
                <hr />
                <input type="hidden" asp-for="MarkId" value="@ViewBag.MarkId" class="form-control" />
                <div class="form-group">
                    <label class="control-label">Предмет</label>
                    <div>
                        <input class="form-control" disabled value="@ViewBag.Subject"/><br />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Оценка</label>
                    <div>
                        <input asp-for="Value" type="number" min="60" max="100" value="@ViewBag.MarkValue" class="form-control" /><br />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-warning login-button">Изменить</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>